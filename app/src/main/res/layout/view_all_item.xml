<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Product Image (right-aligned) -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_meat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/image_rounded_background"
            android:clipToOutline="true" />

        <!-- Product Info (left-aligned) -->
        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/actionIcons"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alfredo Pasta"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs. 722.20"
                android:textSize="14sp"
                android:textColor="#D32F2F"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken mushroom pasta milk-white sauce cream"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Action Icons (placed in the empty space between text and image) -->
        <LinearLayout
            android:id="@+id/actionIcons"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/productImage"
            app:layout_constraintBottom_toBottomOf="@id/productImage"
            app:layout_constraintStart_toEndOf="@id/textContainer"
            app:layout_constraintEnd_toStartOf="@id/productImage">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/edit_icon"
                android:contentDescription="Edit"
                app:tint="#4CAF50" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/del_icon100"
                android:contentDescription="Delete"
                app:tint="#F44336" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>