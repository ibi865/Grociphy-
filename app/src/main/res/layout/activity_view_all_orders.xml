<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewAllOrdersLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    tools:context=".Admin_Panel.View_All_Orders">

    <!-- Header with Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_arrow2"
            android:contentDescription="Back"
            android:layout_marginStart="25dp" />

        <TextView
            android:id="@+id/ordersHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Orders"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Filter Spinner -->
    <Spinner
        android:id="@+id/orderFilterSpinner"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="32dp"
        android:background="@drawable/spinner_background"
        android:popupBackground="@android:color/white"
        android:spinnerMode="dropdown"
        android:dropDownWidth="200dp"
        android:dropDownVerticalOffset="4dp"
        android:elevation="2dp"
        android:outlineProvider="bounds"
        android:popupTheme="@style/SpinnerPopupStyle"/>



    <!-- ProgressBar (initially hidden) -->
    <ProgressBar
        android:id="@+id/orders_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginBottom="12dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ordersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:contentDescription="User Order"
        android:paddingBottom="8dp" />

</LinearLayout>