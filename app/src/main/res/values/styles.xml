<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OutlinedPasswordField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">#4CAF50</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="SpinnerPopupStyle" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:dropDownSelector">@android:color/transparent</item>
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources>